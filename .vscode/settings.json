{
	"[python]": {
		"editor.defaultFormatter": "eeyore.yapf",
		"editor.formatOnSave": true,
		"editor.formatOnSaveMode": "file"
	},
	"cSpell.words": [
		"fixturenames",
		"metafunc",
		"nodeid",
		"Nogowski",
		"pytest"
	],
	"editor.bracketPairColorization.enabled": true, //Cycle through colors for different brackets
	"editor.detectIndentation": false, //False: Manually set tab size
	"editor.find.autoFindInSelection": "multiline", //Search Selected text when multiple lines are selected
	"editor.formatOnPaste": true, //Format Pasted content
	"editor.formatOnSave": true, //Format on Save
	"editor.guides.bracketPairs": "active", //Enable Bracket paring
	"editor.guides.highlightActiveBracketPair": true, //Highlight bracket pairs
	"editor.insertSpaces": false, //False: Use Tabs instead of spaces
	"editor.showUnused": true,
	"editor.tabSize": 4, //Tabs are 4 spaces
	"editor.wordWrap": "on", //Enforce text wrapping on next line in editor
	"files.associations": {
		"py.typed": "python"
	},
	"files.defaultLanguage": "python", //Assume new files are python
	"files.encoding": "utf8", //Enforce UTF8 encoding
	"files.eol": "\n",
	"files.trimFinalNewlines": true, //Remove extra white space and end of file on save
	"git.autofetch": "all", //Commits will automatically be fetched from ALL remotes of the current Git repository.
	"html.format.wrapLineLength": 300,
	"python.analysis.autoImportCompletions": true,
	"python.analysis.typeCheckingMode": "basic",
	"search.followSymlinks": false, //False: Do NOT show symlinks multiple times in search results
	"workbench.colorCustomizations": {
		"editorUnnecessaryCode.border": "#dd7aab", //Underline unused code
		"tree.indentGuidesStroke": "#00ff00" //Add Green line when hovering over folder hierarchy
	},
	"workbench.editor.highlightModifiedTabs": true, //Highlight file tabs for unsaved files
	"workbench.layoutControl.enabled": true,
	"workbench.layoutControl.type": "toggles",
	"workbench.startupEditor": "none",
	"workbench.tree.indent": 25, //Indent folder hierarchy
	"yapf.args": [
		"--style",
		"{BASED_ON_STYLE: Google, COLUMN_LIMIT: 300, INDENT_WIDTH: 4, USE_TABS: true}"
	],
	"python.analysis.exclude": [
		".venv/**"
	],
	"python.analysis.ignore": [
		".venv/**"
	],
	"python.testing.pytestArgs": [
		"tests"
	],
	"python.testing.unittestEnabled": false,
	"python.testing.pytestEnabled": true
}